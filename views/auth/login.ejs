<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
     <%- include('../includes/navigation.ejs') %>

     <main>
          <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
          <% } %>
          <form class="login-form" action="/login" method="POST">
               <div class="form-control">
                    <label for="email">Email</label>
                    <input class="<%= validationError.find(e=> e.param === 'email') ? 'invalid' : '' %>" type="text"
                         name='email' id="email" value="<%= oldInput.email%>">
               </div>
               <div class="form-control">
                    <label for="password">password</label>
                    <input class="<%= validationError.find(e=> e.param === 'password') ? 'invalid' : '' %>"
                         type="password" name='password' id="password" value="<%= oldInput.password%>">
               </div>
               <button class="btn" type="submit">Submit</button>
          </form>
          <div class="centered">
               <a href="/reset">Reset password</a>
          </div>

     </main>

     <%- include('../includes/end.ejs') %>