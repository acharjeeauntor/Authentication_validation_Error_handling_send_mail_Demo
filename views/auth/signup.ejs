<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
     <%- include('../includes/navigation.ejs') %>

     <main>
          <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
          <% } %>
          <form class="login-form" action="/signup" method="POST">
               <div class="form-control">
                    <label for="name">Name</label>
                    <input 
                    class="<%= validationError.find(e=> e.param === 'name') ? 'invalid' : '' %>"
                    type="text" 
                    name='name' 
                    id="name" 
                    value="<%= oldInput.name%>">
               </div>
               <div class="form-control">
                    <label for="email">Email</label>
                    <input 
                    class="<%= validationError.find(e=> e.param === 'email') ? 'invalid' : '' %>"
                    type="text" 
                    name='email' 
                    id="email" 
                    value="<%= oldInput.email%>">
               </div>
               <div class="form-control">
                    <label for="password">Password</label>
                    <input 
                    class="<%= validationError.find(e=> e.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name='password' 
                    id="password" 
                    value="<%= oldInput.password%>">
               </div>
               <div class="form-control">
                    <label for="confirmpassword">Confirm Password</label>
                    <input
                    class="<%= validationError.find(e=> e.param === 'confirmpassword') ? 'invalid' : '' %>"
                    type="password" 
                    name='confirmpassword' 
                    value="<%= oldInput.confirmpassword%>">
               </div>
               <button class="btn" type="submit">Submit</button>
          </form>
     </main>

     <%- include('../includes/end.ejs') %>